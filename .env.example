# ─── Gmail / Email Notifications ─────────────────────────────────────────────
# Gmail address used to send order notification emails
GMAIL_USER=your-gmail@gmail.com
# Gmail App Password (NOT your regular password — generate one at
# https://myaccount.google.com/apppasswords)
GMAIL_APP_PASSWORD=your-16-char-app-password
# Email address that receives new order notifications
ORDER_RECEIVER_EMAIL=orders@yourdomain.com

# ─── WooCommerce REST API ─────────────────────────────────────────────────────
# Base URL of your WordPress / WooCommerce site
WC_URL=https://your-woocommerce-site.com
# REST API Consumer Key  (generate at WooCommerce > Settings > Advanced > REST API)
WC_CONSUMER_KEY=ck_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# REST API Consumer Secret
WC_CONSUMER_SECRET=cs_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ─── WooCommerce Store API (client-side, exposed to browser) ──────────────────
# Must be prefixed with VITE_ so Vite injects them into the browser bundle
VITE_WC_STORE_URL=https://your-woocommerce-site.com/wp-json/wc/store/v1
VITE_WC_NONCE_URL=https://your-woocommerce-site.com/wp-json/knwn/v1/nonce

# ─── Stripe ───────────────────────────────────────────────────────────────────
# Secret key — server-side only, NEVER expose to browser
STRIPE_SECRET_KEY=your_stripe_secret_key_here
# Publishable key — safe to expose in browser bundle
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# ─── Coupons ──────────────────────────────────────────────────────────────────
# Special 100 % off coupon that bypasses Stripe entirely
FREE_COUPON_CODE=YOUR_FREE_COUPON_CODE
